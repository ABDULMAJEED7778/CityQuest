<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:padding="16dp"
    android:background="@color/background_color"
    tools:context=".SummaryActivity">

    <LinearLayout
        android:id="@+id/logo_dest_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/App_logo_destination"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/applogoicon"
            android:layout_marginTop="16dp"
            android:scaleType="fitCenter"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/cityquest_destination"
            android:layout_width="115dp"
            android:layout_height="36dp"
            android:src="@drawable/cityquesticon"
            android:layout_marginTop="16dp"
            android:scaleType="fitCenter" />
    </LinearLayout>
    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Your Trip Summary"
        android:textColor="@color/primary_color"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_trip"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</LinearLayout>