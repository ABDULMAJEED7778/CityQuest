<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="207dp"
    android:layout_height="295dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    >
    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bangalore"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/city_image_popular_cities"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bangalore"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="185dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/rounded_corner_city_info"

            android:layout_gravity="bottom"
            android:layout_marginLeft="11dp">


            <TextView
                android:id="@+id/CityName_popular_cities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Bangalore"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/location_icon_popular_cities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/location_icon"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/CountryName_popular_cities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="India"
                    android:layout_toRightOf="@id/location_icon_popular_cities"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_gravity="start"
                    android:layout_centerVertical="true"

                    />
                <TextView
                    android:id="@+id/rating_popular_cities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="4.8"
                    android:textColor="@color/white"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:id="@+id/star_icon_city_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_icon"
                    android:layout_toLeftOf="@id/rating_popular_cities"
                    android:paddingTop="2dp"

                    />
            </RelativeLayout>

        </LinearLayout>

    </FrameLayout>


</androidx.cardview.widget.CardView>
