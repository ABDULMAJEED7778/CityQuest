<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="54dp"
    android:layout_margin="4dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:id="@+id/filter_dest_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:paddingRight="6dp"
        android:paddingBottom="2dp"

        android:layout_gravity="center_vertical"
        android:background="@color/primary_color"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/filter_dest_filterName"
            android:layout_toRightOf="@+id/filter_icon_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/background_color"
            android:text="Filter Name"
            android:textSize="14sp"
            android:layout_marginStart="6dp"
            />

        <RelativeLayout
            android:id="@+id/filter_icon_rl"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/filter_icon_background"
            >

            <ImageView
                android:id="@+id/filter_dest_filterIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerInParent="true"
                android:src="@drawable/historical_icon" /> <!-- Replace with your icon resource -->


        </RelativeLayout>



    </RelativeLayout>
</androidx.cardview.widget.CardView>
