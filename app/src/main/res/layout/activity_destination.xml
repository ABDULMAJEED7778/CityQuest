<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp"
android:background="@color/background_color"
android:id="@+id/main"
tools:context=".DestinationActivity">

    <Button
        android:id="@+id/skipBtn_dest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="skip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@color/secondary_color"/>

    <Button
        android:id="@+id/backBtn_dest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/secondary_color"/>

    <LinearLayout
    android:id="@+id/logo_dest_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/App_logo_destination"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/applogoicon"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:id="@+id/cityquest_destination"
        android:layout_width="115dp"
        android:layout_height="36dp"
        android:src="@drawable/cityquesticon"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter" />
</LinearLayout>

<TextView
    android:id="@+id/Where_would_txt"
    android:layout_below="@id/logo_dest_ll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Where would"

    android:layout_marginTop="32dp"
    android:textSize="32sp"
    android:textStyle="bold"
    android:fontFamily="@font/poppins_light"
    android:textColor="@color/primary_color"

    />
<TextView
    android:id="@+id/want_to_go_txt"
    android:layout_below="@id/Where_would_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="you want to go ?"
    android:textSize="32sp"
    android:textStyle="bold"
    android:fontFamily="@font/poppins_semibold"
    android:textColor="@color/primary_color"

    />

<EditText
    android:id="@+id/search_input"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/want_to_go_txt"
    android:layout_marginTop="16dp"
    android:background="@drawable/rounded_corner_et"
    android:hint="Search..."
    android:inputType="textEmailAddress"
    android:padding="10dp"
    android:textColorHint="#828282"
    android:textSize="12sp"
    android:drawableEnd="@drawable/search_icon"
    android:drawablePadding="8dp"
    />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFilters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_input"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"

        android:scrollbars="horizontal" />

    <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerView_city_category"
    android:layout_below="@+id/recyclerViewFilters"
    android:layout_width="match_parent"
    android:layout_height="170dp"

    android:layout_marginTop="8dp"
    android:clipToPadding="false"
    android:scrollbars="horizontal"/>

    <TextView
        android:id="@+id/popular_cities_text"
        android:layout_below="@id/recyclerView_city_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="popular cities"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/primary_color"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_city_popular"
        android:layout_below="@+id/popular_cities_text"
        android:layout_width="match_parent"
        android:layout_height="320dp"

        android:clipToPadding="false"
        android:scrollbars="horizontal"/>














</RelativeLayout>