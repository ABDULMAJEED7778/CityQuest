    <AutoCompleteTextView
        android:id="@+id/search_input"
        android:layout_below="@id/want_to_go_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:importantForAccessibility="yes"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@android:color/white"
        android:textColor="@android:color/black"/>





    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFilters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_input"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"

        android:scrollbars="horizontal" />

    <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerView_city_category"
    android:layout_below="@+id/recyclerViewFilters"
    android:layout_width="match_parent"
    android:layout_height="170dp"

    android:layout_marginTop="8dp"
    android:clipToPadding="false"
    android:scrollbars="horizontal"/>

    <TextView
        android:id="@+id/popular_cities_text"
        android:layout_below="@id/recyclerView_city_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="popular cities"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/primary_color"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_city_popular"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_below="@+id/popular_cities_text"

        android:layout_marginTop="10dp"
        android:clipToPadding="false"
        android:scrollbars="horizontal" />


</RelativeLayout>