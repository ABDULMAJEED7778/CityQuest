<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@color/background_color"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/trip_image_myTrips"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bangalore" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingEnd="-1dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/days_left_myTrips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start"
                    android:fontFamily="@font/poppins_regular"
                    android:text="4 days left"
                    android:padding="2dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/primary_color"
                    android:textSize="14sp"
                    android:background="@drawable/trip_days_left_bg"

                    />



                    <ImageView
                        android:id="@+id/three_dots_myTrips"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="2dp"
                        app:tint="@color/primary_color"
                        android:layout_centerInParent="true"
                        android:src="@drawable/three_dots_svgrepo_com" />




            </RelativeLayout>
            <TextView
                android:id="@+id/trip_name_txt_myTrips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Cultural Delights of Bangalore"
                android:textColor="@color/primary_color"
                android:textSize="14sp"
                android:layout_marginTop="4dp"

                />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <TextView
                    android:id="@+id/trip_date_range_myTrips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start"

                    android:fontFamily="@font/poppins_regular"
                    android:text="Dec 12 - 14 â€¢"
                    android:textColor="@color/gray"
                    android:textSize="14sp"

                    />

                <TextView
                    android:id="@+id/trip_companion_txt_myTrips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/trip_date_range_myTrips"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Family"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />


            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>
