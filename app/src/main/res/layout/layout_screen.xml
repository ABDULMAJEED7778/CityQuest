<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="@dimen/dimens_16"
    android:background="@color/background_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_intro"
        android:layout_marginTop="16dp"
        android:src="@drawable/plan_trip_imag"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_250"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Plan Your Trip"
        android:textAlignment="center"
        android:textColor="@color/primary_color"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_description"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Choose your destination, plan your trip. \nPick the best place to your holiday"
        android:textAlignment="center"
        android:textColor="@color/hintTextColor"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>