<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:backgroundTint="@color/background_color"
    >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:text="Save Customized Trip"
        android:textColor="@color/background_color"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginBottom="24dp"
        android:background="@color/primary_color_light"
        android:textAlignment="center"
        android:textSize="18sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Trip Name"
        android:paddingHorizontal="16dp"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopEnd="6dp"
        app:boxCornerRadiusTopStart="6dp"
        app:boxCornerRadiusBottomEnd="6dp"
        app:boxCornerRadiusBottomStart="6dp"
        app:boxStrokeColor="@color/primary_color_light"
        app:boxCollapsedPaddingTop="8dp"
        app:boxStrokeWidth="2dp"
        android:textColorHint="@color/primary_color_light"
        app:hintTextColor="@color/primary_color_light"
        app:cursorColor="@color/primary_color_light"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_trip_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:paddingTop="16dp"
            android:textAppearance="@style/bottomNavTextAppearanceInactive"
            android:textColor="@color/primary_color"
            android:textSize="18sp"
            android:focusable="true"
            >

            <requestFocus />
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@color/transparent"
            android:textColor="@color/red"
            />

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginStart="8dp"
            android:textColor="@color/background_color"/>
    </LinearLayout>

</LinearLayout>
