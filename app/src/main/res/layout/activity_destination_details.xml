<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main"
    tools:context=".DestinationDetailsActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/recyclerView_CityDetails"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_below="@+id/recyclerView_CityDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"
        android:background="?attr/colorPrimary"
        app:tabIndicatorColor="@color/white"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/gray"
        app:tabIndicatorHeight="4dp"
        app:tabIndicatorGravity="center"
        app:tabPaddingStart="16dp"
        app:tabPaddingEnd="16dp"
        app:tabMode="fixed"
        />






    <ScrollView
        android:layout_below="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:fillViewport="true">

        <TextView
            android:id="@+id/city_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your long text content here"
            android:textSize="16sp"
            android:padding="16dp"
       /> <!-- Optional: disable overscroll glow effect -->

    </ScrollView>
    <Button
        android:id="@+id/select_btn_detail"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rounded_corner_next_btn"
        android:drawableEnd="@drawable/right_arrow"
        android:text="select"
        android:textSize="20dp"
        android:layout_margin="8dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:paddingRight="15dp"
        android:padding="8dp"/>

    <Button
        android:id="@+id/backBtn_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:background="@color/secondary_color"/>



</RelativeLayout>
