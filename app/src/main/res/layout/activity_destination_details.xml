
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            android:background="@drawable/round_top_corners"
            android:orientation="vertical"
            android:id="@+id/main"

            >




            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_CityDetails"
                android:layout_width="match_parent"
                 app:carousel_alignment="center"
                android:orientation="horizontal"
                android:layout_height="250dp"
                android:clipChildren="false"
                android:clipToPadding="false" />



            <TextView
                android:id="@+id/city_name_txt"
                android:layout_below="@id/recyclerView_CityDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City name"
                android:padding="8dp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:textSize="24dp"
                />

            <TextView
                android:layout_below="@id/city_name_txt"
                android:id="@+id/about_city_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About City name"
                android:padding="8dp"
                android:textColor="@color/primary_color"
                android:textStyle="bold"
                />






            <ScrollView
                android:layout_below="@+id/about_city_txt"
                android:id="@+id/scrollView_CityDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:fillViewport="true">

                <TextView
                    android:id="@+id/city_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your long text content here"
                    android:textSize="16sp"
                    android:padding="16dp"
                    /> <!-- Optional: disable overscroll glow effect -->

            </ScrollView>
            <Button
                android:id="@+id/select_btn_detail"
                android:layout_below="@+id/scrollView_CityDetails"
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                android:layout_alignParentEnd="true"
                android:background="@drawable/rounded_corner_next_btn"
                android:drawableEnd="@drawable/right_arrow"
                android:text="select"
                android:textSize="20dp"
                android:layout_margin="8dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:paddingRight="15dp"
                android:padding="8dp"/>

            <Button
                android:id="@+id/view_onMap_btn"
                android:layout_below="@+id/scrollView_CityDetails"
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                android:layout_alignParentStart="true"
                android:background="@drawable/rounded_corner_next_btn"
                android:drawableStart="@drawable/map_location_icon"
                android:text="View map"
                android:textSize="16dp"
                android:drawablePadding="8dp"

                android:layout_margin="8dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:paddingRight="15dp"
                android:padding="8dp"/>




        </RelativeLayout>







