<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout_edit_trip_page"
    android:layout_width="match_parent"
    android:background="@color/background_color"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primary_color_light"
        android:elevation="4dp"
        app:title="Edit Details"
        app:titleTextColor="@color/background_color"
        app:titleTextAppearance="@style/toolbarTextAppearance"
        app:titleCentered="true"
        app:navigationIcon="@drawable/left_arrow"
        app:navigationIconTint="@color/background_color"
        android:layout_marginBottom="24dp"
        app:menu="@menu/tool_bar_edit_trip_page"
       />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/edit_days_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"/>


    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/hintTextColor_semi_transparent"
        android:id="@+id/add_day_button"
        android:paddingVertical="10dp"
        android:importantForAccessibility="yes"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/poppins_medium"
        android:text="Add Day"
        android:textColor="@color/primary_color"
        android:textAlignment="center"
        app:cornerRadius="8dp"
        app:icon="@drawable/add_icon"
        app:iconGravity="textStart"
        app:iconSize="24dp"
        app:iconTint="@color/primary_color"
        android:layout_marginHorizontal="24dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/primary_color"
        />

</LinearLayout>
