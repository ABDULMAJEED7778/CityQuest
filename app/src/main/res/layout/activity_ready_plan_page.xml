<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_columnWeight="0.4"
        android:background="@color/background_color"
        android:id="@+id/scrollview">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/bangalore_image"

                />

            <TextView
                android:id="@+id/no_of_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-50dp"
                android:alpha="0.9"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="16dp"
                android:shadowColor="@color/hintTextColor"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="8"
                android:text="8 Days"
                android:textColor="@color/secondary_color"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/plan_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/barlowsemicondensed_bold"
                    android:paddingLeft="16dp"
                    android:text="Cultural Delights of Bangalore"
                    android:textColor="@color/primary_color"
                    android:textSize="24sp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    app:srcCompat="@drawable/star"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/plan_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/barlowsemicondensed_bold"
                    android:gravity="center"
                    android:text="4.8"
                    android:textColor="@color/secondary_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/location_pin" />

                <TextView
                    android:id="@+id/city_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/barlowsemicondensed_semibold"
                    android:text="Bangalore,India"
                    android:textColor="@color/primary_color"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:tint="@color/secondary_color"
                    app:srcCompat="@drawable/sun" />

                <TextView
                    android:id="@+id/weather_condation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/barlowsemicondensed_medium"
                    android:text="Sunny - 22Â°C"
                    android:textColor="@color/primary_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:textAlignment="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/plans_details_top_oval"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingHorizontal="8dp"
                        android:text="Trip Type"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/trip_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/plans_details_down_oval"
                        android:fontFamily="@font/poppins_medium"
                        android:minWidth="100dp"
                        android:paddingHorizontal="4dp"
                        android:text=" Aventure and Sports"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/plans_details_top_oval"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingHorizontal="8dp"
                        android:text="comp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/companion_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/plans_details_down_oval"
                        android:fontFamily="@font/poppins_medium"
                        android:minWidth="100dp"
                        android:paddingHorizontal="4dp"
                        android:text="Family"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/plans_details_top_oval"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingHorizontal="8dp"
                        android:text="starts"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/plans_details_down_oval"
                        android:fontFamily="@font/poppins_medium"
                        android:minWidth="100dp"
                        android:paddingHorizontal="4dp"
                        android:text="18/Dec/24"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/background_color"
                android:paddingStart="16dp"
                app:tabIndicatorColor="@color/primary_color"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/primary_color"
                app:tabTextAppearance="@style/details_tap_ready_plan_page"
                app:tabTextColor="@color/gray">


                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overview"


                    />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Itinerary"

                    />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Explore"

                    />

            </com.google.android.material.tabs.TabLayout>


            <TextView
                android:id="@+id/overview_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlowsemicondensed_regular"
                android:padding="16sp"
                android:text="Embark on a journey through the Cultural Delights of Bangalore, where vibrant traditions meet modern innovation. Explore bustling markets, savor aromatic spices, and immerse yourself in the rich heritage of India's Garden City."
                android:textColor="@color/hintTextColor"
                android:textSize="20sp" />

            <!-- Itinerary Section -->
            <FrameLayout
                android:id="@+id/itinerary_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:id="@+id/explore_section"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/dining_rec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/title_section"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="16dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/dining_recommendation_listing_btn"
                            android:layout_width="20dp"
                            android:layout_height="15dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/rounded_corner_dining_rec_btn"
                            android:cropToPadding="false"
                            android:paddingHorizontal="2dp"
                            android:paddingVertical="2dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/down_arrow_icon_vector" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center_vertical"
                            android:text="Dining Recommendation"
                            android:textColor="@color/primary_color" />
                    </LinearLayout>

                    <androidx.gridlayout.widget.GridLayout
                        android:id="@+id/dining_recomendation_grid_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="16dp"
                        android:visibility="visible"
                        app:columnCount="2"
                        app:orientation="horizontal"
                        app:rowCount="2">

                        <!-- Dining Recommendation Card 1 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:outlineProvider="background"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="4dp"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/background_color"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <!-- Restaurant Name -->
                                <TextView
                                    android:id="@+id/text_restaurant_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="4dp"
                                    android:text="The 13th Floor"
                                    android:textColor="@color/primary_color"
                                    android:textSize="16sp" />

                                <!-- Restaurant Rating -->
                                <TextView
                                    android:id="@+id/text_restaurant_rating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_light"
                                    android:text="Rating: 4.5/5"
                                    android:textColor="@color/hintTextColor"
                                    android:textSize="14sp" />

                                <!-- Restaurant Cuisine Type -->
                                <TextView
                                    android:id="@+id/text_cuisine_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_light"
                                    android:paddingBottom="8dp"
                                    android:text="Cuisine: Italian"
                                    android:textColor="@color/hintTextColor"
                                    android:textSize="14sp" />

                                <!-- Button to Add to Itinerary -->
                                <Button
                                    android:id="@+id/button_add_itinerary"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:backgroundTint="@color/primary_color_light"
                                    android:fontFamily="@font/poppins_light"
                                    android:text="Add to Itinerary"
                                    android:textColor="@color/primary_color"

                                    />

                                <!-- Button to Open in Google Maps -->
                                <Button
                                    android:id="@+id/button_open_google_maps"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/primary_color"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="Check Menu"
                                    android:textColor="@color/background_color" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Dining Recommendation Card 2 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="4dp"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/background_color"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <!-- Restaurant Name -->
                                <TextView
                                    android:id="@+id/text_restaurant_name2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="4dp"
                                    android:text="The 13th Floor"
                                    android:textColor="@color/primary_color"
                                    android:textSize="16sp" />

                                <!-- Restaurant Rating -->
                                <TextView
                                    android:id="@+id/text_restaurant_rating2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_light"
                                    android:text="Rating: 4.5/5"
                                    android:textColor="@color/hintTextColor"
                                    android:textSize="14sp" />

                                <!-- Restaurant Cuisine Type -->
                                <TextView
                                    android:id="@+id/text_cuisine_type2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_light"
                                    android:paddingBottom="8dp"
                                    android:text="Cuisine: Italian"
                                    android:textColor="@color/hintTextColor"
                                    android:textSize="14sp" />

                                <!-- Button to Add to Itinerary -->
                                <Button
                                    android:id="@+id/button_add_itinerary2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:backgroundTint="@color/primary_color_light"
                                    android:fontFamily="@font/poppins_light"
                                    android:text="Add to Itinerary"
                                    android:textColor="@color/primary_color"

                                    />

                                <!-- Button to Open in Google Maps -->
                                <Button
                                    android:id="@+id/button_open_google_maps2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/primary_color"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="Check Menu"
                                    android:textColor="@color/background_color" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Dining Recommendation Card 3 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="4dp"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/background_color"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <!-- Restaurant Name -->
                                <TextView
                                    android:id="@+id/text_restaurant_name3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="4dp"
                                    android:text="The 13th Floor"
                                    android:textColor="@color/primary_color"
                                    android:textSize="16sp" />

                                <!-- Restaurant Rating -->
                                <TextView
                                    android:id="@+id/text_restaurant_rating3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_light"
                                    android:text="Rating: 4.5/5"
                                    android:textColor="@color/hintTextColor"
                                    android:textSize="14sp" />

                                <!-- Restaurant Cuisine Type -->
                                <TextView
                                    android:id="@+id/text_cuisine_type3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_light"
                                    android:paddingBottom="8dp"
                                    android:text="Cuisine: Italian"
                                    android:textColor="@color/hintTextColor"
                                    android:textSize="14sp" />

                                <!-- Button to Add to Itinerary -->
                                <Button
                                    android:id="@+id/button_add_itinerary3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:backgroundTint="@color/primary_color_light"
                                    android:fontFamily="@font/poppins_light"
                                    android:text="Add to Itinerary"
                                    android:textColor="@color/primary_color"

                                    />

                                <!-- Button to Open in Google Maps -->
                                <Button
                                    android:id="@+id/button_open_google_maps3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/primary_color"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="Check Menu"
                                    android:textColor="@color/background_color" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Dining Recommendation Card 4 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="4dp"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/background_color"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <!-- Restaurant Name -->
                                <TextView
                                    android:id="@+id/text_restaurant_name4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="4dp"
                                    android:text="The 13th Floor"
                                    android:textColor="@color/primary_color"
                                    android:textSize="16sp" />

                                <!-- Restaurant Rating -->
                                <TextView
                                    android:id="@+id/text_restaurant_rating4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_light"
                                    android:text="Rating: 4.5/5"
                                    android:textColor="@color/hintTextColor"
                                    android:textSize="14sp" />

                                <!-- Restaurant Cuisine Type -->
                                <TextView
                                    android:id="@+id/text_cuisine_type4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_light"
                                    android:paddingBottom="8dp"
                                    android:text="Cuisine: Italian"
                                    android:textColor="@color/hintTextColor"
                                    android:textSize="14sp" />

                                <!-- Button to Add to Itinerary -->
                                <Button
                                    android:id="@+id/button_add_itinerary4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:backgroundTint="@color/primary_color_light"
                                    android:fontFamily="@font/poppins_light"
                                    android:text="Add to Itinerary"
                                    android:textColor="@color/primary_color"

                                    />

                                <!-- Button to Open in Google Maps -->
                                <Button
                                    android:id="@+id/button_open_google_maps4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/primary_color"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="Check Menu"
                                    android:textColor="@color/background_color" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </androidx.gridlayout.widget.GridLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Floating Back Button -->
</FrameLayout>