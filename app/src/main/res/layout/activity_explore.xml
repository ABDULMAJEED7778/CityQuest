<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="16dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_marginTop="24dp"
        android:background="@color/design_default_color_background"
        android:backgroundTint="@color/background_color"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="177dp"
            android:layout_height="52dp"
            app:srcCompat="@drawable/applogo"
            tools:layout_editor_absoluteX="-1dp"
            tools:layout_editor_absoluteY="2dp" />

        <AutoCompleteTextView
            android:id="@+id/search_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:background="@drawable/search_bar_desing"
            android:focusable="true"
            android:fontFamily="@font/poppins_medium"
            android:hint="Search your next advanture!!"
            android:importantForAccessibility="yes"
            android:includeFontPadding="false"
            android:padding="16dp"
            android:paddingStart="45dp"
            android:textColor="@android:color/black"
            android:textColorHint="#EFE9E9"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            tools:layout_editor_absoluteX="16dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="43dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="75dp"
            app:srcCompat="@android:drawable/ic_menu_search" />

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_color"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Let's Quest "
                    android:textAllCaps="false"
                    android:textColor="@color/primary_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Bengaluru"
                    android:textAllCaps="true"
                    android:textColor="@color/secondary_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text=" Toghether!!"
                    android:textColor="@color/primary_color"
                    android:textSize="16sp" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <include
                        layout="@layout/explore_scroll_one"
                        android:layout_width="250dp"
                        android:layout_height="284dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="0" />


                    <include
                        layout="@layout/explore_scroll_one"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="0" />

                    <include
                        layout="@layout/explore_scroll_one"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="0" />

                    <include
                        layout="@layout/explore_scroll_one"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="0" />

                    <include
                        layout="@layout/explore_scroll_one"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="0" />
                </LinearLayout>
            </ScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/poppins_medium"
                android:text="One Day Outings!"
                android:textAllCaps="false"
                android:textColor="@color/primary_color"
                android:textSize="16sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <include
                        layout="@layout/explore_scroll_one"
                        android:layout_width="250dp"
                        android:layout_height="284dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="0" />


                    <include
                        layout="@layout/explore_scroll_one"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="0" />

                    <include
                        layout="@layout/explore_scroll_one"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="0" />

                    <include
                        layout="@layout/explore_scroll_one"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="0" />

                    <include
                        layout="@layout/explore_scroll_one"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="0" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>