<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/background_color"
    tools:context=".SummaryActivity"
    android:paddingHorizontal="16dp"
    android:paddingTop="64dp"
    android:paddingBottom="16dp"
    android:theme="@style/Theme.CityQuest"    >


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <ImageView
        android:id="@+id/App_logo_destination"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_gravity="start"
        app:srcCompat="@drawable/logo" />

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Your Trip Summary"
        android:textColor="@color/primary_color"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="32dp"/>

    <!-- Destination Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="center_vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/location_icon"
                app:tint="@color/primary_color"
                android:layout_marginEnd="8dp"
                />
            <!-- Title: Companions -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Destination"
                android:textColor="@color/primary_color"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"/>

            <!-- Content: Family -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/edit_icon"

                app:tint="@color/primary_color"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:paddingStart="28dp"
            android:paddingEnd="30dp">

            <TextView
                android:id="@+id/cityName_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Bangalore, "
                android:textColor="@color/secondary_color"
                android:textSize="18sp" />
            <!-- Title: Companions -->





        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/fade_right_to_left_line" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageView
                android:src="@drawable/group_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="@color/primary_color"
                android:layout_marginEnd="8dp"
                />
            <!-- Title: Companions -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Companions"
                android:textColor="@color/primary_color"
                android:layout_width="0dp"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"/>

            <!-- Content: Family -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/edit_icon"

                app:tint="@color/primary_color"

                />


        </LinearLayout>


        <TextView
            android:id="@+id/companion_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_regular"
            android:text="Family"
            android:textColor="@color/secondary_color"
            android:textSize="18sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/fade_right_to_left_line" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageView
                android:src="@drawable/date_range_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="@color/primary_color"
                android:layout_marginEnd="8dp"
                />
            <!-- Title: Companions -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date range"
                android:textColor="@color/primary_color"
                android:layout_width="0dp"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"/>

            <!-- Content: Family -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/edit_icon"

                app:tint="@color/primary_color"

                />


        </LinearLayout>


        <TextView
            android:id="@+id/date_range_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_regular"
            android:text="December 12 to December 14, 2023"
            android:textColor="@color/secondary_color"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/fade_right_to_left_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star_icon"
                app:tint="@color/primary_color"
                android:layout_marginEnd="8dp"
                />
            <!-- Title: Companions -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Interests"
                android:textColor="@color/primary_color"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"/>

            <!-- Content: Family -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/edit_icon"
                android:background="@android:color/transparent"
                app:tint="@color/primary_color"

                />


        </LinearLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/interest_flexbox_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            app:alignItems="stretch"
            app:flexWrap="wrap"
            app:justifyContent="flex_start">


        </com.google.android.flexbox.FlexboxLayout>


        <!--        end of vertical layouot-->
        <!-- Title Text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:id="@+id/choose_trip_type_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Trip Type"
                android:textSize="18sp"
                android:textColor="@color/primary_color"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/dimens_8"
                android:layout_marginBottom="20dp"/>

            <!-- Custom Switch -->
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/trip_type_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimens_100"
                android:checked="true"
                android:textOff="Ready"
                android:clickable="true"
                android:textOn="Custom"

                android:fontFamily="@font/barlowsemicondensed_bold"

                app:switchTextAppearance="@style/toolbarTextAppearance"
                android:thumbTint="@null"
                android:trackTint="@null"
                android:thumb="@drawable/switch_thumb"
                app:track="@drawable/switch_track"
                app:showText="true"
                />
        </LinearLayout>
    </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingBottom="8dp">

        <Button
            android:id="@+id/backBtn_sum"
            style="@style/secondaryButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:background="@drawable/back_btn_background"
            android:drawableStart="@drawable/left_arrow"
            android:drawablePadding="16dp"
            android:elevation="0dp"
            android:fontFamily="@font/barlowsemicondensed_bold"
            android:paddingStart="8dp"
            android:paddingLeft="0dp"
            android:paddingEnd="16dp"
            android:text="Back"
            android:textColor="@color/background_color"
            android:textSize="20sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/nextBtn_sum"
            style="@android:style/Widget.Button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:background="@drawable/rounded_corner_next_btn"
            android:drawableEnd="@drawable/right_arrow"
            android:drawablePadding="16dp"
            android:drawableTint="@color/background_color"
            android:elevation="0dp"
            android:fontFamily="@font/barlowsemicondensed_bold"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:text="Next"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/background_color"
            android:textSize="20sp" />
    </LinearLayout>





</RelativeLayout>
