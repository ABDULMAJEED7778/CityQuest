<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="16dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"

        >

        <ImageView
            android:id="@+id/profile_image_comment_item"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/user_placholer_icon"
            android:scaleType="centerCrop"
            android:background="@drawable/circled_image"
            android:clipToOutline="true"

            android:outlineProvider="background"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:padding="8dp"

            android:background="@drawable/slight_rounded_et"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_name_comment_item"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Ghassan Salmen"
                    android:textColor="@color/primary_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/time_comment_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/barlowsemicondensed_regular"
                    android:text="31 mins ago"
                    android:textColor="@color/hintTextColor"
                    android:textSize="14sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/content_comment_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlowsemicondensed_regular"
                android:text="The place is really nice the local people are friendly, I would like to go there next time if i can next time aflkjljk laksfdlk "
                android:padding="4dp"
                android:textColor="@color/black"
                android:textSize="14sp" />


        </LinearLayout>
            <LinearLayout
                android:id="@+id/replay_like_layout_comment_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Like"
                    android:textColor="@color/hintTextColor"
                    android:textSize="12sp"
                    android:layout_marginRight="4dp"/>
                <ImageView
                    android:id="@+id/like_button_post_item"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:tint="@color/hintTextColor"
                    android:src="@drawable/thumbs_up"
                    android:paddingBottom="2dp"
                    android:layout_marginRight="4dp"/>
                <TextView
                    android:id="@+id/likes_count_comment_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="4"
                    android:textColor="@color/hintTextColor"
                    android:layout_marginRight="4dp"
                    android:textSize="14sp" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="2dp"
                    android:layout_marginRight="4dp"
                    android:background="@color/hintTextColor"/>


                <TextView
                    android:id="@+id/replay_btn_comment_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Replay"
                    android:textColor="@color/hintTextColor"
                    android:layout_marginRight="4dp"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/replay_count_comment_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="4"
                    android:textColor="@color/hintTextColor"
                    android:textSize="14sp" />


            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/replays_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="0dp"
                android:layout_marginHorizontal="10dp"
                android:scrollbars="vertical"
                android:visibility="gone" />



        </LinearLayout>

    </LinearLayout>

</LinearLayout>