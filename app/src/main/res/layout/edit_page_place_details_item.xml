<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="0dp"
    android:paddingBottom="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        >

        <ImageButton
            android:id="@+id/remove_place_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="24dp"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/remove_icon"
            app:tint="@color/red" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView88"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/aim_shape"
                    />

                <TextView
                    android:id="@+id/place_number"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-24dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="1"
                    android:textColor="@color/primary_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/place_name"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Central Park"
                    app:autoSizeMinTextSize="16sp"
                    app:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:layout_marginStart="0dp"
                    android:textColor="@color/primary_color"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/place_overview_adapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlowsemicondensed_regular"
                android:text="A peaceful walk in the morning"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:visibility="gone"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/reorder_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/reorder_icon"
            android:background="@color/transparent"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            app:tint="@color/secondary_color_dark"
            android:layout_marginStart="24dp"
            />



    </LinearLayout>


</LinearLayout>