<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="300dp"
    app:cardCornerRadius="20dp"
    >
    <RelativeLayout
        android:id="@+id/city_item_popular_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bangalore"
        android:paddingBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"

            android:layout_marginBottom="0dp"
            android:alpha="0.7"
            android:background="@color/primary_color"
            android:orientation="vertical"
            android:padding="8dp">


            <TextView
                android:id="@+id/CityName_popular_cities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Bangalore"
                android:textColor="@color/white"
                android:textSize="14sp"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/location_icon_popular_cities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/location_icon" />

                <TextView
                    android:id="@+id/CountryName_popular_cities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start"
                    android:layout_toRightOf="@id/location_icon_popular_cities"
                    android:fontFamily="@font/poppins_regular"
                    android:text="India"
                    android:textColor="@color/white"
                    android:textSize="12sp"

                    />

                <TextView
                    android:id="@+id/rating_popular_cities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppins_regular"
                    android:text="4.8"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/star_icon_city_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/rating_popular_cities"
                    android:paddingTop="2dp"
                    android:src="@drawable/star_icon"

                    />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>
