<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="300dp"
    app:cardCornerRadius="20dp"
    >
    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"

       >
        <ImageView
            android:id="@+id/city_image_popularCity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bangalore"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="0dp"

            android:layout_marginBottom="0dp"
            android:alpha="1"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="8dp">


            <TextView
                android:id="@+id/CityName_popular_cities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Bangalore"
                android:textColor="@color/primary_color"
                android:textSize="14sp"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/location_icon_popular_cities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:foregroundTint="@color/primary_color"
                    android:src="@drawable/location_icon"
                    app:tint="@color/primary_color" />

                <TextView
                    android:id="@+id/CountryName_popular_cities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start"
                    android:layout_toRightOf="@id/location_icon_popular_cities"
                    android:fontFamily="@font/poppins_regular"
                    android:text="India"
                    android:textColor="@color/primary_color"
                    android:textSize="12sp"

                    />

                <TextView
                    android:id="@+id/rating_popular_cities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingVertical="0dp"
                    android:text="4.8"
                    android:textAlignment="center"
                    android:textColor="@color/primary_color"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/star_icon_city_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/rating_popular_cities"

                    android:paddingTop="2dp"
                    android:src="@drawable/star"
                    app:tint="@color/primary_color" />
            </RelativeLayout>

        </LinearLayout>

    </FrameLayout>


</androidx.cardview.widget.CardView>
