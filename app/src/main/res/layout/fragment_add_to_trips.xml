<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

<!--    <pl.droidsonroids.gif.GifImageView-->
<!--        android:id="@+id/loading_anim_explore_page"-->
<!--        android:layout_width="150dp"-->
<!--        android:layout_height="150dp"-->
<!--        android:src="@drawable/tick_paper_plance_anim"-->
<!--        />-->

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved To My trips!"
        android:textColor="@color/primary_color"
        android:textSize="24sp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/barlowsemicondensed_bold"
        android:id="@+id/saved_text_view"
        android:visibility="invisible"
         />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/tickAnimation"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginBottom="32dp"
        android:layout_gravity="center_horizontal"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/tick_paper_plane" />


    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/background_color"
        android:padding="16dp"
        android:elevation="4dp"
        android:fontFamily="@font/barlowsemicondensed_bold"
        android:layout_marginBottom="24dp"
        android:textAllCaps="false"
        android:background="@drawable/rounded_corner_btn"
        android:text="Let's Head To First Location"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        style="@style/ThirdButtonStyle"
        android:elevation="4dp"
        android:textColor="@color/background_color"
        android:padding="16dp"
        android:textAllCaps="false"
        android:fontFamily="@font/barlowsemicondensed_bold"
        android:layout_marginBottom="-32dp"
        android:text="I'm Going Back Later"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        style="@style/secondaryButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@color/secondary_color"
        android:elevation="4dp"
        android:fontFamily="@font/barlowsemicondensed_bold"
        android:text="Back To The Trip"
        android:textAllCaps="true"
        android:textColor="@color/background_color"
        android:textSize="18sp"
        app:cornerRadius="0dp" />

</LinearLayout>