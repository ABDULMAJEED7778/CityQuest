<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="8dp"

  >

    <ImageView
        android:id="@+id/App_logo_my_saved_trips"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_gravity="start"
        app:srcCompat="@drawable/logo" />

    <!--        <TextView-->
    <!--            android:id="@+id/Where_would_txt"-->
    <!--            android:layout_width="wrap_content"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:text="Where would"-->
    <!--            android:layout_marginTop="32dp"-->
    <!--            android:textSize="32sp"-->
    <!--            android:textStyle="bold"-->
    <!--            android:fontFamily="@font/poppins_light"-->
    <!--            android:textColor="@color/primary_color"-->
    <!--            />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/my_saved_trips_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="My Saved Trips"
            android:textColor="@color/primary_color"
            android:textSize="24sp"
            />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@drawable/fade_right_to_left_line" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_saved_trips_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:scrollbars="vertical" />





</LinearLayout>