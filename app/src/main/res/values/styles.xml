<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavActiveIndicatorStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#4D0C3B2E</item>
        <item name="color">@color/primary_color_light</item>
    </style>
    <style name="details_tap_ready_plan_page" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Custom Button Style -->
    <style name="primaryButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textAppearance">@style/CustomChipTextAppearance</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <!-- Custom Button Style -->
    <style name="secondaryButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/secondary_color</item>
    </style>

    <!-- Custom Button Style -->
    <style name="ThirdButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_color_light</item>
    </style>

    <style name="InterestsPage" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color_light</item>
        <item name="colorOnPrimary">@color/background_color</item>
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/background_color</item>
        <!-- Add other theme attributes as needed -->
    </style>

    <style name="TripsPage" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/primary_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/secondary_color</item>

        <item name="materialButtonStyle">@style/primaryButtonStyle</item>
        <!-- Add other theme attributes as needed -->
    </style>

    <style name="CustomChipTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="toolbarTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/background_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="bottomNavTextAppearanceInactive" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="bottomNavTextAppearanceActive" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="toolbarExpandedTextAppearance" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>

    </style>


    <style name="bottomNavAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:paddingVertical">4dp</item>
    </style>


    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="MyBottomSheetDialogTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/background_color</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="progressCircleStyle" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <!-- Primary theme colors for M2 -->
        <item name="trackThickness">5dp</item>
        <item name="indicatorSize">50dp</item>
        <item name="trackColor">@color/primary_color_light</item>
        <item name="indicatorColor">@color/primary_color</item>
        <item name="trackCornerRadius">4dp</item>
    </style>

    <!-- Custom Popup Menu Style -->
    <style name="CustomPopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:textColor">@color/background_color</item> <!-- Custom text color -->
        <item name="indicatorColor">@color/light_gray</item>
        <item name="popupMenuBackground">@color/transparent</item>
        <item name="android:background">@drawable/popup_menu_background</item>
        <item name="android:colorBackground">@color/transparent</item>
        <item name="android:itemTextAppearance">@style/popupMenuTextAppearance</item>
        <item name="checkboxStyle">@style/popupMenuCheckbox</item>
    </style>

    <style name="popupMenuTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/background_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="popupMenuCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="buttonTint">@color/background_color</item>


    </style>



</resources>