<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Layer -->
    <item android:top="2dp" android:right="2dp" android:left="2dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_color"/> <!-- Your button color -->
            <corners android:radius="50dp"/>
        </shape>
    </item>

    <!-- Stroke Layer -->
    <item android:top="2dp" android:right="2dp" android:left="2dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent color for stroke -->
            <stroke
                android:width="1dp"
            android:color="#B3B3B3"/>
            <corners android:radius="50dp"/>
        </shape>
    </item>
</layer-list>
