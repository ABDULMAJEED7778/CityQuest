<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent"/>
        </shape>
    </item>
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:height="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_color"/>
        </shape>
    </item>
    <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:height="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_color"/>
        </shape>
    </item>
</layer-list>
