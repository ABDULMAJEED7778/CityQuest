<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Thumb when Switch is ON -->
    <item android:state_checked="true">

        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimens_20"/>
            <solid android:color="@color/secondary_color"/> <!-- Lighter color for ON state -->
            <size android:width="@dimen/dimens_80" android:height="@dimen/dimens_35"/> <!-- Custom size -->

        </shape>
    </item>

    <!-- Thumb when Switch is OFF -->
    <item android:state_checked="false">

        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimens_20"/>
            <solid android:color="@color/primary_color"/> <!-- Lighter color for ON state -->
            <size android:width="@dimen/dimens_80" android:height="@dimen/dimens_35"/> <!-- Custom size -->

        </shape>
    </item>



</selector>
