<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DDDDDD"/> <!-- Shadow color -->
            <corners android:radius="50dp"/> <!-- Match the corner radius to the shape -->
        </shape>
    </item>
    <!-- Background Layer -->
    <item android:top="2dp" android:right="2dp" android:left="2dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#D9D9D9"/> <!-- Your button color -->
            <corners android:radius="50dp"/>
        </shape>
    </item>
</layer-list>
